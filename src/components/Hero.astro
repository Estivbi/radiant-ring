<section class="relative min-h-screen flex items-center overflow-hidden pt-20">
  <!-- Estrellas y elementos decorativos de fondo -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="stars"></div>
    <div class="stars2"></div>
    <div class="stars3"></div>
    
    <!-- Planetas y elementos decorativos -->
    <div class="absolute top-1/4 right-10 w-32 h-32 rounded-full bg-purple-500/20 blur-xl"></div>
    <div class="absolute bottom-1/4 left-10 w-40 h-40 rounded-full bg-blue-500/20 blur-xl"></div>
    <div class="absolute top-1/3 left-1/4 w-24 h-24 rounded-full bg-green-500/20 blur-lg"></div>
  </div>

  <div class="container mx-auto p-4 md:p-8 z-10 relative">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div>
        <h1 class="text-4xl md:text-6xl lg:text-7xl mb-6 text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-500">
          Custodio José<br />
          <span class="text-white">Pérez Pérez</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-blue-200">
          Escritor friki de universos fantásticos y aventuras que desafían la imaginación.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/#libros" class="inline-block p-4 rounded-full font-bold bg-gradient-to-r from-green-500 to-teal-500 text-white hover:from-green-600 hover:to-teal-700">
            Ver libros
          </a>
          <a href="/#autor" class="inline-block p-4 rounded-full font-bold bg-gradient-to-r from-purple-500 to-pink-500 text-white hover:from-purple-600 hover:to-pink-600">
            Conoce al autor
          </a>
        </div>
      </div>
      <div class="flex justify-center">
        <div class="relative">
          <!-- Placeholder para la imagen del autor o de un libro -->
          <div class="w-64 h-80 md:w-80 md:h-96 bg-gradient-to-b from-purple-600 to-blue-600 rounded-xl shadow-xl transform rotate-3">
            <!-- Imagen real del autor -->
            <img 
              src="/custodio.png" 
              alt="Custodio José Pérez Pérez" 
              class="absolute inset-0 w-full h-full object-cover object-top rounded-xl" 
              style="z-index:1;" 
            />
          </div>
          <!-- Elementos decorativos -->
          <div class="absolute -bottom-5 -left-5 w-24 h-24 bg-green-500/30 rounded-full blur-md"></div>
          <div class="absolute -top-5 -right-5 w-20 h-20 bg-pink-500/30 rounded-full blur-md"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación de estrellas */
  .stars, .stars2, .stars3 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  .stars {
    background: url('data:image/svg+xml;base64,') repeat;
    animation: stars 120s linear infinite;
  }
  
  .stars2 {
    background: url('data:image/svg+xml;base64,') repeat;
    animation: stars 180s linear infinite;
  }
  
  .stars3 {
    background: url('data:image/svg+xml;base64,') repeat;
    animation: stars 240s linear infinite;
  }
  
  @keyframes stars {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>