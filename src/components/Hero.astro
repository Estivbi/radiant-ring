<section id="hero-section" class="relative min-h-screen flex items-center overflow-hidden pt-20 bg-gradient-to-br from-gray-900 via-blue-950 via-gray-950 to-black transition-opacity duration-500">
  <!-- Fondo animado tipo neón/partículas -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
    <canvas id="neon-bg" class="w-full h-full absolute inset-0"></canvas>
    <!-- Planetas decorativos -->
    <div class="absolute top-1/4 right-10 w-32 h-32 rounded-full bg-indigo-500/30 blur-2xl shadow-[0_0_60px_20px_rgba(99,102,241,0.5)]"></div>
    <div class="absolute bottom-1/4 left-10 w-40 h-40 rounded-full bg-blue-500/30 blur-2xl shadow-[0_0_60px_20px_rgba(59,130,246,0.4)]"></div>
    <div class="absolute top-1/3 left-1/4 w-24 h-24 rounded-full bg-gray-400/20 blur-xl shadow-[0_0_40px_10px_rgba(156,163,175,0.2)]"></div>
  </div>

  <div class="container mx-auto p-4 md:p-8 z-10 relative">
    <div class="grid md:grid-cols-2 gap-8 items-center">
      <div>
        <h1 class="text-2xl sm:text-3xl md:text-6xl lg:text-7xl mb-6 text-white font-bold drop-shadow-[0_0_8px_rgba(99,102,241,0.4)] animate-glow-soft text-center md:text-left break-words leading-tight">
          Custodio José <span class="text-indigo-300 drop-shadow-[0_0_6px_rgba(99,102,241,0.3)] break-words">Pérez Pérez</span>
        </h1>
        <div class="flex flex-wrap gap-3 mt-4 justify-center md:justify-start">
          <a href="/#libros" class="inline-block px-5 py-2 rounded-lg font-medium text-base bg-gradient-to-r from-indigo-700 to-indigo-400 text-white shadow-[0_0_8px_1px_rgba(99,102,241,0.4)] hover:from-indigo-800 hover:to-indigo-500 transition-all">
            Ver libros
          </a>
          <a href="/#autor" class="inline-block px-5 py-2 rounded-lg font-medium text-base border border-gray-400 text-gray-100 bg-transparent hover:bg-gray-800/60 hover:border-gray-200 transition-all duration-200">
            Conoce al autor
          </a>
        </div>
      </div>
      <div class="flex justify-center p-20">
        <div class="relative">
          <div class="w-64 h-80 md:w-80 md:h-96 bg-gradient-to-b from-gray-900 to-gray-500 rounded-xl shadow-xl transform rotate-3 border-4 border-indigo-400/40 shadow-[0_0_40px_10px_rgba(99,102,241,0.2)]">
            <img 
              src="/custodio.png" 
              alt="Custodio José Pérez Pérez" 
              class="absolute inset-0 w-full h-full object-cover object-top rounded-xl" 
              style="z-index:1;" 
            />
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
<script is:inline>
window.addEventListener('scroll', () => {
  const hero = document.getElementById('hero-section');
  if (!hero) return;
  const rect = hero.getBoundingClientRect();
  // Cuando el Hero sale de la pantalla, opacidad baja
  let progress = Math.min(1, Math.max(0, -rect.top / (rect.height * 0.7)));
  hero.style.opacity = 1 - progress;
});
</script>


<style>
  @keyframes glow-soft {
    0%, 100% { text-shadow: 0 0 8px #22c55e55, 0 0 16px #22c55e22; }
    50% { text-shadow: 0 0 16px #22c55e55, 0 0 24px #22c55e33; }
  }
  .animate-glow-soft {
    animation: glow-soft 2.5s ease-in-out infinite alternate;
  }
</style>

    <script is:inline>
    // Fondo animado tipo partículas/líneas neón
    const canvas = document.getElementById('neon-bg');
    if (canvas) {
      const ctx = canvas.getContext('2d');
      let w, h;
      function resize() {
        w = canvas.width = window.innerWidth;
        h = canvas.height = window.innerHeight;
      }
      window.addEventListener('resize', resize);
      resize();
      // Partículas
      const particles = Array.from({length: 32}, () => ({
        x: Math.random() * w,
        y: Math.random() * h,
        r: 1.5 + Math.random() * 2.5,
        dx: (Math.random() - 0.5) * 0.7,
        dy: (Math.random() - 0.5) * 0.7,
        color: `hsl(${120 + Math.random()*120}, 80%, 60%)`
      }));
      function draw() {
        ctx.clearRect(0,0,w,h);
        for (const p of particles) {
          ctx.beginPath();
          ctx.arc(p.x, p.y, p.r, 0, Math.PI*2);
          ctx.shadowColor = p.color;
          ctx.shadowBlur = 16;
          ctx.fillStyle = p.color;
          ctx.globalAlpha = 0.35;
          ctx.fill();
          ctx.globalAlpha = 1;
          p.x += p.dx;
          p.y += p.dy;
          if (p.x < 0 || p.x > w) p.dx *= -1;
          if (p.y < 0 || p.y > h) p.dy *= -1;
        }
        requestAnimationFrame(draw);
      }
      draw();
    }
    </script>