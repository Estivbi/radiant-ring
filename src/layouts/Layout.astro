---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { 
	title = 'Custodio José Pérez Pérez - Escritor Friki', 
	description = 'Descubre los libros del escritor friki Custodio José Pérez Pérez. Universos imaginarios, personajes inolvidables y historias que te atraparán.' 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gradient-to-b from-purple-900 via-indigo-900 to-blue-900 text-white min-h-screen">
		<slot />
		<footer class="mt-20 py-8 text-center bg-black/30">
			<div class="container mx-auto px-4">
				<p>&copy; {new Date().getFullYear()} Custodio José Pérez Pérez. Todos los derechos reservados.</p>
			</div>
		</footer>
	</body>
</html>
