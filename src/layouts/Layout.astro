---

import '../styles/global.css';
import Footer from '../components/Footer.astro';

interface Props {
	title?: string;
	description?: string;
	metaImage?: string;
	jsonLd?: any;
}

const { 
	title = 'Custodio José Pérez Pérez - Escritor', 
	description = 'Custodio José Pérez Pérez es escritor nacido en Extremadura. Sus historias exploran los secretos, la vida rural y la complejidad humana. Descubre sus libros, entrevistas y trayectoria personal.' 
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>

		{Astro.props.metaImage ? <meta property="og:image" content={Astro.props.metaImage} /> : null}
		<meta property="og:title" content={Astro.props.title} />
		<meta property="og:description" content={Astro.props.description} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={Astro.props.title} />
		<meta name="twitter:description" content={Astro.props.description} />
		{Astro.props.metaImage ? <meta name="twitter:image" content={Astro.props.metaImage} /> : null}

		{Astro.props.jsonLd ? <script type="application/ld+json">{JSON.stringify(Astro.props.jsonLd)}</script> : null}
		<link href="https://fonts.googleapis.com/css2?family=Bangers&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
	</head>
		<body class="bg-gray-300 text-gray-900 min-h-screen flex flex-col overflow-x-hidden">
		<main class="flex-grow w-full max-w-full">
			<slot />
		</main>
			<Footer />
	</body>
</html>
