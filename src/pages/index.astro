---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Welcome from '../components/Welcome.astro';
import BookSection from '../components/BookSection.astro';
import { books } from '../data/books';
import AuthorSection from '../components/AuthorSection.astro';
import ContactSection from '../components/ContactSection.astro';
import Gallery from '../components/Gallery';

// Los datos de libros ahora se importan desde `src/data/books.ts`

// Datos para la galería
const galleryImages = [
  {
    src: 'https://images.unsplash.com/photo-1603162617030-7a47b851d577?auto=format&fit=crop&q=80&w=800',
    alt: 'Firma de libros en la Feria del Libro',
    title: 'Firma de libros en la Feria del Libro 2025',
  },
  {
    src: 'https://images.unsplash.com/photo-1534278272449-9449ba183e4e?auto=format&fit=crop&q=80&w=800',
    alt: 'Convención de cómics y fantasía',
    title: 'Participación en la Comic Con 2025',
  },
  {
    src: 'https://images.unsplash.com/photo-1590795769516-177809072b6a?auto=format&fit=crop&q=80&w=800',
    alt: 'Club de lectura',
    title: 'Club de lectura virtual - Marzo 2025',
  },
];
---

<Layout>
  <Navbar />
  <main>
    <Hero />
    <Welcome />
    <BookSection books={books} />
    
  <section class="p-16 md:p-20 bg-gray-900/20">
      <div class="container mx-auto p-4">
        <div class="text-center mb-12">
          <h2 class="text-4xl md:text-5xl mb-4 text-transparent bg-clip-text bg-gradient-to-r from-gray-900 via-gray-500 to-gray-100">
            Eventos y Galerías
          </h2>
          <p class="text-xl text-gray-700 max-w-3xl mx-auto">
            Momentos especiales con mis lectores y en eventos del mundo friki.
          </p>
        </div>
        <div class="max-w-4xl mx-auto">
          <Gallery client:load images={galleryImages} />
        </div>
      </div>
    </section>
    
    <AuthorSection />
    <ContactSection />
  </main>
</Layout>
